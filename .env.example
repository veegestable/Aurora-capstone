# MongoDB Configuration for Aurora Mental Health App

# Local MongoDB (for development)
MONGODB_URI=mongodb://localhost:27017/aurora

# MongoDB Atlas Configuration (for production)
# Replace with your actual Atlas connection string
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster-name>.mongodb.net/aurora?retryWrites=true&w=majority

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Optional: CORS Configuration
CORS_ORIGIN=http://localhost:5173